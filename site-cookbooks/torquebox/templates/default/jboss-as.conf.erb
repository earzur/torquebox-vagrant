# General configuration for the init.d script
export JBOSS_USER=<%=@node['torquebox']['user']%>
export JBOSS_HOME=<%=@node['torquebox']['install_path']%>/jboss
export JBOSS_LOG_DIR=/var/log/torquebox
export JBOSS_PIDFILE=<%=@node['torquebox']['pid_file']%>
export JBOSS_CONSOLE_LOG=<%=@node['torquebox']['log_file']%>
export JBOSS_SYSTEM_LOG=<%=@node['torquebox']['system_log_file']%>
export JBOSS_BOOT_LOG=<%=@node['torquebox']['boot_log_file']%>
export JBOSS_CONFIG=standalone-ha.xml
export JAVA_OPTS="-Djboss.bind.address=192.168.4.3"